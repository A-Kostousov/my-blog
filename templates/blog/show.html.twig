{% extends 'base.html.twig' %}

{% block title %}Страница поста{% endblock %}

{% block body %}
    <h2>{{ post.postTitle }}</h2>
    <p>{{ post.postText }}</p>
    <hr>
    <p>{{ post.createdAt | date (" D M Y H: i: s ") }}</p>

    <a href="{{ path('update', {'id': post.id}) }}" class="btn btn-primary">Изменить</a>
    <a href="{{ path('delete', {'id': post.id}) }}" class="btn btn-primary">Удалить</a>

    <div class="container">
        <div class="example-wrapper">
            <div class="form-group">
                {{ form_start(form, {'attr': {'novalidate':'novalidate'}}) }}


                {{ form_row(form.author,{ 'class':'summernote' }) }}
                <br>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Добавить комментарий</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}